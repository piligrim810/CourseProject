@model CourseProject.Models.Request
@{
    ViewBag.Title = "Creating review";
}
<form asp-action="create" enctype="multipart/form-data">
    <div class="hidden">
        <input type="text" asp-for="@Model.Review.UserName" value="@ViewBag.UserName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Review.Title" class="control-label">Title</label>
        <input type="text" asp-for="@Model.Review.Title" class="form-control" />
    </div>
        <p>Group
            @Html.DropDownListFor(model => model.Review.GroupId, ViewBag.Groups as SelectList)
        </p>
    <div class="form-group">
        <label asp-for="@Model.Review.Text" class="control-label">Text</label>
        <textarea  asp-for="@Model.Review.Text" class="form-control" >
        </textarea>
    </div>

    <label asp-for="@Model.Review.Grade" class="control-label">Grade</label>
    <div class="rating-area">
	        <input type="radio" id="star-5" name="Review.Grade" value="5">
	        <label for="star-5" title="Оценка «5»"></label>	
	        <input type="radio" id="star-4" name="Review.Grade" value="4">
	        <label for="star-4" title="Оценка «4»"></label>    
	        <input type="radio" id="star-3" name="Review.Grade" value="3">
	        <label for="star-3" title="Оценка «3»"></label>  
	        <input type="radio" id="star-2" name="Review.Grade" value="2">
	        <label for="star-2" title="Оценка «2»"></label>    
	        <input type="radio" id="star-1" name="Review.Grade" value="1" checked>
	        <label for="star-1" title="Оценка «1»"></label>
    </div>

    <div method="post" class="form-group">
        <input type="file" asp-for="@Model.Image" class="form-control"/>
    </div>
 
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
