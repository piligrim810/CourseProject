@model IEnumerable<CourseProject.Data.Review>
@{
    ViewData["Title"] = "Personal Page";
}

<div class="text-center">
 <form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Title: </label>
        <input name="Title" class="form-control" />
        <label class="control-label">Grade: </label>
        <input name="Grade" class="form-control" />
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>
    <form method="post">
    <table class="table table-bordered">
        <tr>
            <td class="text-center">Id</td>
            <td class="text-center">UserId</td>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSort">Title</a>
            </th>
            <td class="text-center">Text</td>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.GradeSort">Grade</a>
            </th>
        </tr>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Id</td>
                <td>@review.UserId</td>
                <td>@review.Title</td>
                <td>@review.Text</td>
                <td>@review.Grade</td>
                <td>
                    <button asp-action="ReadReview" asp-route-reviewId="@review.Id" type="submit" class="btn btn-sm ">Read</button>
                </td>
                <td>
                    <button asp-action="DeleteReview" asp-route-reviewId="@review.Id" type="submit" class="btn btn-sm ">Delete</button>
                </td>
                <td>
                    <button asp-action="EditReview" asp-route-reviewId="@review.Id" type="submit" class="btn btn-sm ">Edit</button>
                </td>
            </tr>
        }
    </table>
    <a asp-action="CreateReview">Create review</a>
</form>
</div>
